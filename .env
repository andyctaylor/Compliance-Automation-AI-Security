# .env - NEVER commit this file to Git!
# This file contains secrets specific to your local environment

# Security
SECRET_KEY=your-very-long-random-string-here-change-this
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
# Format: postgres://username:password@host:port/database_name
DATABASE_URL=postgres://caas_user:secure_password@localhost:5432/caas_db

# Redis (for caching and background tasks)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
DEFAULT_FROM_EMAIL=noreply@caas.local

# Email settings (using console backend in dev)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# HIPAA Compliance settings
ENCRYPTION_KEY=generate-32-character-key-for-field-encryption
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years as required by HIPAA
SESSION_TIMEOUT_MINUTES=15     # Auto-logout after inactivity

# AWS settings (for production)
# AWS_ACCESS_KEY_ID=your-aws-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret
# AWS_STORAGE_BUCKET_NAME=caas-media-bucket